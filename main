  <textarea id="mensaje" placeholder="EscribÃ­ tu mensaje" rows="4"></textarea>
  <button onclick="enviarMensaje()">Enviar</button>
  <div id="estado">ğŸ“¬</div>

  <script>
    const scriptURL = "https://script.google.com/macros/s/AKfycbxEhtyHETB2Hf-NmYdH-vKbFKc9dQy2LuGk3LQPlNss3zS6elCsULDjpeCaI62rrDJwzQ/exec";

    function enviarMensaje() {
      const mensaje = document.getElementById("mensaje").value.trim();
      const estado = document.getElementById("estado");

      if (!mensaje) {
        estado.textContent = "Por favor escribÃ­ un mensaje.";
        return;
      }

      fetch(scriptURL, {
        method: 'POST',
        body: JSON.stringify({ mensaje }),
        headers: {
          'Content-Type': 'application/json'
        }
      })
      .then(res => res.json())
      .then(data => {
        if (data.estado === "ok") {
          estado.textContent = "Mensaje enviado con Ã©xito ğŸ’Œ";
          document.getElementById("mensaje").value = "";
        } else {
          estado.textContent = "OcurriÃ³ un error. ğŸ˜¥";
        }
      })
      .catch(() => estado.textContent = "No se pudo enviar el mensaje.");
    }
  </script>
